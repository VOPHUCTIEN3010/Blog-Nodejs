<%- include('../layout/header.ejs') %>
<div class="container-xl px-4 mt-4 profile-section">
    <hr class="mt-0 mb-4">
    <form action="/update_infor" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <div class="image-container">
                            <% if (user && user.image) { %>
                                <img id="imagePreview" class="img-account-profile rounded-circle mb-2" src="<%= '/upload/' + user.image %>" alt="">
                            <% } else { %>
                                <img id="imagePreview" class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                            <% } %>
                            <div class="small font-italic text-muted mb-4">Avatar</div>
                            <input name="image" type="file" class="form-control" id="inputImage">
                        </div>
                    </div>
                                        
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label" for="inputUsername">Fullname:</label>
                            <input class="form-control" id="inputUsername" type="text" name="fullname" placeholder="Enter your username" value="<%= user.fullname %>">
                        </div>
                        <div class="mb-3">
                            <label for="sex" class="col-sm-2 col-form-label">Sex:</label>
                            <select name="sex" class="form-control" id="sex" required>
                                <option value="male" <%= user.sex == "male" ? "selected" : "" %>>Male</option>
                                <option value="female" <%= user.sex == "female" ? "selected" : "" %>>Female</option>
                                <option value="other" <%= user.sex == "other" ? "selected" : "" %>>Other</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label" for="inputUsername">Location:</label>
                            <input class="form-control" id="inputUsername" type="text" name="address" placeholder="Enter your addresss" value="<%= user.address %>">
                        </div>
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label" for="inputEmailAddress">Email address:</label>
                            <input class="form-control" id="inputEmailAddress" type="email" name="email" placeholder="Enter your email address" value="<%= user.email %>">
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="col-form-label" for="inputPhone">Phone number:</label>
                                <input class="form-control" id="inputPhone" type="tel" name="phone" placeholder="Enter your phone number" value="<%= user.phone %>">
                            </div>
                            <div class="col-md-6">
                                <label class="col-form-label" for="divBirthday">Birthday:</label>
                                <input class="form-control" id="inputBirthday" type="date" name="birthday" placeholder="Enter your birthday" value="<%= user.birthday %>">
                            </div>
                        </div>
                        <button class="btn btn-primary" name="submit" type="submit">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<%- include('../layout/footer.ejs') %>