<%- include('../layout/header') %>
<div class="container mt-4">
    <div class="row">
        <div class="col-sm-9">
            <form method="post" action="/update_post/<%= postEdit.id %>" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <label for="content" class="col-sm-2 col-form-label">Content: </label>
                    <div class="col-sm-10">
                        <input name="content" type="text" class="form-control" id="content" value="<%= postEdit.content %>" required>
                    </div>
                </div>  
                <div class="mb-3 row">
                    <label for="title" class="col-sm-2 col-form-label">Title: </label>
                    <div class="col-sm-10">
                        <input name="title" type="text" class="form-control" id="title" value="<%= postEdit.title %>" required>
                    </div>
                </div>
                <input type="text" class="form-control d-none" name="slug" id="slug" placeholder="slug" value="<%= postEdit.slug %>" readonly>                  
                <div class="mb-3 row">
                    <label for="image" class="col-sm-2 col-form-label">Image: </label>                        
                    <div class="col-sm-10">
                        <input name="image" type="file" class="form-control" id="image" placeholder="Upload an Avatar" onchange="previewImage(this)">
                        <% if (postEdit.image && postEdit.image !== '') { %>
                            <img class="my-3" id="current-image" src="/upload/<%= postEdit.image %>" alt="Current Avatar" style="max-width: 200px; height: auto;">
                        <% } else { %>
                            <p class="my-3" id="no-image">No image</p>
                        <% } %>
                        <img class="my-3" id="preview" src="#" alt="Preview Image" style="max-width: 200px; height: auto; display: none;">
                    </div>                        
                </div>                   
                <div class="mb-3 row">
                    <div class="offset-sm-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>                   
            </form>
        </div>
    </div>
</div>
<%- include('../layout/footer') %>
