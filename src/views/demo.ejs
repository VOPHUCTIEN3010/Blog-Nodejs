<% if (post.id === commentPost?.post_id) { %>
    <div class="media-block content-comment">
        <a class="media-left" href="#">
            <img class="img-circle img-sm" alt="Profile Picture" src="/upload/<%= commentPost?.users?.image %>" />
        </a>
        <div class="media-body mar-btm">
            <a href="#" class="btn-link text-semibold media-heading box-inline">
                <%= commentPost?.users?.fullname %>
            </a>

            <p class="text-muted text-sm">
                <i class="fa fa-mobile fa-lg"></i>
                <span class="comment-time" data-time="<%= commentPost?.createdAt %>"></span>
            </p>
            <span>
                <%= commentPost?.content %>
            </span>
            <div class="pad-ver">
                <div class="btn-group">
                    <a class="btn btn-sm btn-default btn-hover-success" href="#">
                        <i class="fa fa-thumbs-up"></i>
                    </a>
                    <a class="btn btn-sm btn-default btn-hover-primary reply-btn" href="#">
                        <i class="fa fa-comment"></i> Reply
                    </a>
                </div>
            </div>
            <form class="form-text-comment hidden" action="/post_comment" method="POST">
                <textarea type="text" class="form-control comment-post" name="comment" placeholder="Comment...." rows="2"></textarea>
                <div class="mar-top clearfix">
                    <button type="submit" class="btn btn-sm btn-primary pull-right float-end">Submit</button>
                </div>
            </form>
        </div>
    </div>
<% } else { %>
    <div class="not-find-comment">
        <p>Hãy viết bình luận của bạn!</p>
    </div>
<% } %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<div class="container-xl bootdey w-50">
    <div class="panel mt-5">
        <div class="card w-100 h-50">
            <div class="card-header d-flex">
                <a class="media-left" href="/user_profile"><img class="img-circle img-sm" alt="Profile Picture" src="/upload/<%= post?.users?.image %>" /></a>
                <div class="mar-btm">
                    <a href="/user_profile" class="btn-link text-semibold media-heading box-inline">
                        <%= post?.users?.fullname %>
                    </a>
                    <p class="text-muted text-sm">
                        <i class="fa-lg"></i><span class="post-time" data-time="<%= post.createdAt %>"></span>
                    </p>
                </div>
            </div>
            <p class="card-text p-3">
                <%= post?.content %>
            </p>
            <img class="card-img" class="w-100 h-50" src="/upload/<%= post.image %>" alt=""/>
            <div class="card-footer d-flex align-items-center">
                <div class="">
                    <%= post?.number_like %>
                </div>
                <a class="btn btn-sm btn-default btn-hover-success" href="#">
                    <i class="fa fa-thumbs-up"></i>
                </a>
                <a class="btn btn-sm btn-default btn-hover-primary" href="#"><i class="fa fa-comment"></i> Comment</a>
            </div>
            <form class="form-text-comment" id="commentForm" method="POST">
                <textarea class="form-control comment-post" id="inputComment" name="content" placeholder="Comment...." rows="2"></textarea>
                <div class="mar-top-submit clearfix">
                    <button type="submit" id="post-comment" class="btn btn-sm btn-primary pull-right float-end">Submit</button>
                </div>
            </form>
            <div class="show-comment">
                <a href="">Nhấn để xem bình luận</a>
            </div>
            <div id="comment-lists">
                <div class="media-block content-comment">
                    <a class="media-left" href="#">
                        <img class="img-circle img-sm" alt="Profile Picture" src="/upload/sample.jpg" />
                    </a>
                    <div class="media-body mar-btm">
                        <a href="#" class="btn-link text-semibold media-heading box-inline">
                            Sample User
                        </a>
                        <p class="text-muted text-sm">
                            <i class="fa fa-mobile fa-lg"></i>
                            <span class="comment-time" data-time="2023-05-23"></span>
                        </p>
                        <span>
                            Sample comment content
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  $('#post-comment').on('click', function(event) {
    event.preventDefault();

    var username = '<%= post?.users?.fullname %>';
    var comment = $('#inputComment').val();

    $('#comment-lists').append(`<div class="media-block content-comment">
        <a class="media-left" href="#">
            <img class="img-circle img-sm" alt="Profile Picture" src="/upload/sample.jpg" />
        </a>
        <div class="media-body mar-btm">
            <a href="#" class="btn-link text-semibold media-heading box-inline">
                ${username}
            </a>
            <p class="text-muted text-sm">
                <i class="fa fa-mobile fa-lg"></i>
                <span class="comment-time" data-time="${moment(new Date()).format('llll')}"></span>
            </p>
            <span>
                ${comment}
            </span>
        </div>
    </div>`);

    $("#inputComment").val('');
  });
</script>
